{{!-- ENHANCEMENT NOTES:
Added a simple Rooms page with a small filter/sort/search form and results list.
--}}
<h1>{{title}}</h1>

<p>
  Total results: <strong>{{total}}</strong>
  {{#if source}}
    <span style="margin-left: 8px; color: #666;">
      (data source: {{source}})
    </span>
  {{/if}}
</p>

<form method="GET" action="/rooms" style="margin-bottom: 16px;">
  <label>
    Search:
    <input type="text" name="q" value="{{filters.q}}" placeholder="ocean, suite, value..." />
  </label>

  <label style="margin-left: 12px;">
    Max price:
    <input type="number" name="maxPrice" value="{{filters.maxPrice}}" min="0" />
  </label>

  <label style="margin-left: 12px;">
    Min rating:
    <input type="number" name="minRating" value="{{filters.minRating}}" min="0" max="5" step="0.1" />
  </label>

  <label style="margin-left: 12px;">
    Tag:
    <input type="text" name="tag" value="{{filters.tag}}" placeholder="beach, city, family..." />
  </label>

  <label style="margin-left: 12px;">
    Sort:
    <select name="sort">
      <option value="rating" {{#if filters.sortIsRating}}selected{{/if}}>Rating (high to low)</option>
      <option value="price" {{#if filters.sortIsPrice}}selected{{/if}}>Price (low to high)</option>
    </select>
  </label>

  <button type="submit" style="margin-left: 12px;">Apply</button>
  <a href="/rooms" style="margin-left: 10px;">Reset</a>
</form>

{{#if rooms.length}}
  <ul>
    {{#each rooms}}
      <li>
        <strong>{{name}}</strong>
        — ${{pricePerNight}} / night
        — Rating: {{rating}}
        — Beds: {{beds}}
        {{#if tags.length}}
          — Tags: {{tags}}
        {{/if}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No rooms matched your filters. Try a different search or remove a filter.</p>
{{/if}}

<p>
  <a href="/">Back home</a>
</p>
